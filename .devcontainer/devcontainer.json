{
  "name": "Python 3.10",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": { 
      "VARIANT": "3.10",
      "NODE_VERSION": "lts/*"
    }
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts/*"
    }
  },
  "settings": { 
    "python.defaultInterpreterPath": "/usr/local/bin/python",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": true
  },
  "extensions": [
    "ms-python.python",
    "ms-python.vscode-pylance",
    "ms-toolsai.jupyter"
  ],
  "remoteUser": "vscode",
  "forwardPorts": [
    9092, 9101, 8081, 9021, 8082
  ],
  "onCreateCommand": "[ -f requirements.txt ] && pip install -r requirements.txt || echo 'Requirements failed'",
  "postCreateCommand": "echo 'Container ready!'"
}
